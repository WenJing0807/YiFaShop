@model IEnumerable<prjYiFaShop.Models.tProduct>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>產品一覽表</h2>
@using (Html.BeginForm())
{
    /*新增關鍵字查詢*/
    <p>
        關鍵字
        <input type="text" name="txtKeyword" />
        <input type="submit" value="查詢" />
    </p>
}

<p>
    @Html.ActionLink("新增產品", "CreateProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fPId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fImg)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fPId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fPrice)
        </td>
        <td>
            <img src="~/images/@item.fImg" width="250" height="180" /> @*顯示產品圖片*@
        </td>
        <td>
            @Html.ActionLink("編輯", "EditProduct", new { fId=item.fId }) |
            @Html.ActionLink("刪除", "DeleteProduct", new { fId=item.fId },new { onclick="return confirm('確定刪除此筆?')" })
        </td>
    </tr>
}

</table>
