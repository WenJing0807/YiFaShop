
@{
    ViewBag.Title = "管理者登入";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理者登入</title>
    <style>
        .form-group {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h2>管理者登入</h2>
    <form action="@Url.Action("ALogin")" method="post">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <span class="control-label col-md-2">帳號</span>
                <div class="col-md-10">
                    <input type="text" id="fAdminId" name="fAdminId" required="required" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <span class="control-label col-md-2">密碼</span>
                <div class="col-md-10">
                    <input type="password" id="fPwd" name="fPwd" required="required" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="登入" class="btn btn-primary" />
                    @ViewBag.Message
                </div>
            </div>
        </div>
    </form>

</body>
</html>
