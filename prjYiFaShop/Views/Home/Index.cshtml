@model IEnumerable<prjYiFaShop.Models.tProduct>
@{
    ViewBag.Title = "產品列表";
}

<div class="row" style="margin-top:20px;">
    @foreach (var item in Model)
    {
        <div class="col-12 col-md-6 col-lg-4 mb-3">
            @*響應式設定*@
            <div class="thumbnail border border-1">
                <div class="imgbox d-flex align-items-center justify-content-center" style="height:350px;">
                    <img src="~/images/@item.fImg" style="width:100%;height:100%" />
                </div>
                <div class="caption card-body">
                    <h4>@item.fName</h4>
                    <p>單價：@item.fPrice</p>
                    @*<p>
                        數量（以斤為單位）：
                        <select class="w-25" style=" padding: 4px; border-radius: 3px; border: 1px solid #ccc;">
                            @for (int i = 1; i <= 50; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </p>*@

                    <p><a href="@Url.Action("AddCar","Member")?fPId=@item.fPId" class="btn btn-primary">加入購物車</a></p>
                </div>
            </div>
        </div>
    }
</div>

    

