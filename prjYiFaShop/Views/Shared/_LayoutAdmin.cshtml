<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 義發蛋行</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        *, *::after, *::before {
            margin: 0;
            padding: 0;
            box-sizing: border-box
        }
        a {
            text-decoration: none; /*消除a連結底線*/
            padding: 10px;
        }
        .d-flex{
            display: flex;
        }

        ul {
            list-style: none; /*消除li點點*/
        }

        .container {
            /*display: flex;
            flex-direction: row;
            flex-wrap: wrap;*/
        }

        .navbar-header {
            display: flex;
            flex-direction: row;
        }

        .nav-item {
            display: flex;
            flex-direction: row;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light " style="background-color:burlywood">
        <div class="container">
            <div class="navbar-header mb-0">
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>*@
                @Html.ActionLink("義發線上商城", "AOrderList", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @*<div class="navbar-collapse collapse">*@
                <ul class="nav-item mb-0">
                    <li>@Html.ActionLink("產品管理", "List", "Admin")</li>
                    <li>@Html.ActionLink("訂單管理", "AOrderList", "Admin")</li>
                    <li>@Html.ActionLink("登出", "Logout", "Admin")</li>
                </ul>
        </div>
        @*</div>*@
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 義發蛋行</p>
            @Html.ActionLink("進入前台", "Index", "Home")
        </footer>
    </div>
        

        @Scripts.Render("~/bundles/jquery")
        @*@Scripts.Render("~/bundles/bootstrap")*@
        <script src="~/Scripts/bootstrap.min.js"></script>
        @RenderSection("scripts", required: false)
</body>
</html>
